@model IEnumerable<zad1.Models.Survey>
@{
    ViewData["Title"] = "My Surveys";
}

<h1>My Surveys</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>You haven't created any surveys yet. <a asp-action="Create">Create one now!</a></p>
    </div>
}
else
{
    <div class="row">
        @foreach (var survey in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@survey.Title</h5>
                        @if (!string.IsNullOrEmpty(survey.Description))
                        {
                            <p class="card-text">@survey.Description</p>
                        }
                        <p class="text-muted small">Created: @survey.CreatedAt.ToString("MMM dd, yyyy")</p>
                        <a asp-action="Details" asp-route-id="@survey.Id" class="btn btn-primary">View</a>
                        <a asp-action="Results" asp-route-id="@survey.Id" class="btn btn-secondary">View Results</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Create New Survey</a>
    <a asp-action="Index" class="btn btn-secondary">Back to All Surveys</a>
</div>
