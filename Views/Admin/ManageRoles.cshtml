@model zad1.Models.ViewModels.ManageUserRolesViewModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<h1>Manage Roles for @Model.Email</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="ManageRoles" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Email" />

    <div class="mb-3">
        <h4>Select Roles:</h4>
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="Roles[i].RoleName" />
                <input class="form-check-input" type="checkbox" asp-for="Roles[i].IsSelected" id="role@i" />
                <label class="form-check-label" for="role@i">
                    @Model.Roles[i].RoleName
                </label>
            </div>
        }
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<div asp-validation-summary="All" class="text-danger"></div>
